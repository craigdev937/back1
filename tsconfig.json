{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "module": "NodeNext",
        "target": "ES2024",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}



